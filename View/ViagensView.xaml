<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ViajeiD_.View.ViagensView"
             Title="ViagensView"
             NavigationPage.HasNavigationBar="False">
    <ScrollView>
        <VerticalStackLayout >
            <Frame BorderColor="Black" CornerRadius="0" HasShadow="False">
                <Grid>
                    <Grid.RowDefinitions>
                        <!-- Defina suas linhas conforme necessÃ¡rio -->
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Adicione os elementos do Grid aqui -->
                    <BoxView Grid.Row="0" Color="White" HeightRequest="40" />
                    <Label Grid.Row="0" Text="Minhas Viagens" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" FontSize="30" FontFamily="Grotesque" />
                </Grid>
            </Frame>
            <VerticalStackLayout Padding="10">
                <Frame BackgroundColor="#009D86" Padding="0" HeightRequest="100" CornerRadius="0">
                    <Button  BackgroundColor="Transparent" 
                 Text="Novo Destino" 
                 Clicked="AddDestinyClicked"
                 VerticalOptions="CenterAndExpand" 
                 HorizontalOptions="CenterAndExpand" 
                 TextColor="White" 
                 FontSize="30" 
                 FontFamily="Grotesque"
                 CornerRadius="0" >

                    </Button>
                </Frame>


            </VerticalStackLayout>




        </VerticalStackLayout>
    </ScrollView>
</ContentPage>